{% extends "admin/adminbase.html.twig" %}

{% block sidebar_admin %}

<li class="menu_side menu_side_down">
    <a href="{{ path('blog_new') }}">Nouveau blog</a>
</li>
<li>
    <a href="{{ path('categorie_blog_admin')}}">Nouvelle catégorie</a>
</li>

{% endblock %}

{% block body_admin %}

<h1 class="page-header">Dashboard</h1>
<h2 class="sub-header">Blog</h2>
<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Titre</th>
                <th>Rubrique</th>
                <th>Date</th>
                <th>Supprimer</th>
                <th>Editer</th>
            </tr>
        </thead>
        <tbody>
            {% for blog in entities %}
            <tr>
                <td>{{ blog.id }}</td>
                <td>{{ blog.titre }}</td>
                <td>{{ blog.rubriqueblog.nom }}</td>
                <td>{{ blog.date | date('d-m-Y') }}</td>
                <td>
                    <form action="{{ path('blog_delete', {'id' : blog.id })}}" method="POST" onSubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce blog ?');">
                        <input type="submit" class="btn btn-danger" value="supprimer" name="supprimer" />
                    </form>
                </td>
                <td>
                    <a class="btn btn-primary" href="{{ path('edit_blog_admin', {'id': blog.id }) }}">Editer</a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}
