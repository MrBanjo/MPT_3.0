{% extends "base.html.twig" %}

{% block body %}

	<section  class="alter_first_section">
		<div class="container_small" id="panier_detail">
			<div class="title_section">
			    <h2>NOS MENUS</h2>
			</div>
			<nav class="slider_menu">	
				<ul class="bxslider ">
					{% for plat in liste_classique %}
				    	<li>
							<img src="{{ asset(plat.photo)}}" alt="" class="photo_plat">
							<div id="plat_detail">			
								<h3>Menu classique semaine du {{ menu_classique.date | date('d')}}</h3>
								<h4>plat {{ loop.index }} : {{ plat.titre }}</h4>
						    	<div class="plat_what">
						    		<div>
							    		<span class="content-horloge sprite-span"></span>
							    		<span>Temps de préparation</br>{{ plat.temps }}</span>
						    		</div>
						    		<div>
							    		<div class="plat_what_trait"></div>
							    		<span class="content-difficulte sprite-span"></span>
							    		<span>Difficulté</br>{{ plat.difficulte }}</span>
							    	</div>
							    	<div>
							    		<div class="plat_what_trait"></div>
							    		<span class="content-consistance sprite-span"></span>
							    		<span>{{ plat.consistance }}</span>
							    	</div>
						    		<div class="plat_what_trait"></div>
						    		<span class="content-aliment-classique sprite-span"></span>
					    		</div>
						    	<p class="plat_accroche">{{ plat.accroche }}</p>	
						    	<p class="plat_description">{{ plat.description }}</p>
						    	<p class="plat_description"> {{ plat.plus }}</p>
						    	<p class="sel_poivre"><span class="content-sel sprite-span"></span>Prévoir du sel, du poivre et de l’huile dans votre placard</p>
						    	<a href="{{ path('classique') }}" class="discovery orange">découvrir notre panier classique</a>		
							</div>			    	
				    	</li>
				    {% endfor %}		    	
				</ul>	    		   
			</nav>
		</div>
	</section>	
	<section id="panier_suivant">
		<div class="container_small">
			<div class="title_section">
			    <h2>Les semaines à venir</h2>
			</div>	    		   
			<div class="plat_suivant">
				<h3>Semaine du 15 au 21 juin</h3>
		    	<img src="{{ asset('img/menus/semaine1.jpg')}}" alt="" class="photo_plat_suivant">
		    	<p class="plat_titre_suivant">Tarte saumon et légumes</p>
		    	<a class="next_menu">voir le menu</a><span class="content-arrow-next sprite-span"></span>			
			</div>
			<div class="plat_suivant">
				<h3>Semaine du 22 au 28 juin</h3>
		    	<img src="{{ asset('img/menus/semaine2.jpg')}}" alt="" class="photo_plat_suivant">
