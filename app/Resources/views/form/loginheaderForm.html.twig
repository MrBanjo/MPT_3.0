<form action="{{ path('login') }}" method="post" class="login_header_form">
    <label for="headerform-login_username">Votre email:</label>
    <input type="text" id="headerform-login_username" name="_username"  />

    <label for="headerform-login_password">Mot de passe:</label>
    <input type="password" id="headerform-login_password" name="_password" />

    <input type="checkbox" id="headerform-login_remember_me" name="_remember_me" checked />
    <label for="headerform-login_remember_me">Se souvenir de moi</label>
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
    {#
        If you want to control the URL the user
        is redirected to on success (more details below)
        <input type="hidden" name="_target_path" value="/account" />
    #}
    <input type="submit" value="Me connecter">
</form>
