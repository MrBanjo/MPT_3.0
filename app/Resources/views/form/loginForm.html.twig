<form action="{{ path('login') }}" method="post" class="login_form">             
    <div class="userform box_form_user">
        <div class="userform_smallbox box_form_user_small">
            <div class="userform_row row_login_form">
                <div class="userform_label label_login_form">
                    <label for="username_login">Votre email:</label>
                </div>
                <input type="text" name="_username"/>
            </div>
            <div class="userform_row row_login_form">
                <div class="userform_label label_login_form">
                    <label for="password_login">Mot de passe:</label>
                </div>
                <input type="password" name="_password"/>
            </div>
            <div class="userform_row row_login_form">
                <div class="userform_label label_login_form rememberme_login">
                    <label for="userform_remember">Se souvenir de moi:</label>
                </div>
                <input type="checkbox" name="_remember_me" checked/>  
            </div>
            <div class="userform_row row_login_form">              
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
                <button type="submit" value="Me connecter">SE CONNECTER</button>
            </div>         
        </div>
    </div>
</form>
